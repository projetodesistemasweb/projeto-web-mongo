{{#each classes}}
    <div class="card card-body mb-6">
        <h4>{{nome}}</h4>
        <p>{{cor}}</p>
        <p>{{numbersala}}</p>
        <p>{{capacidade}}</p>
        <p>{{professores}}</p>
        <a class="btn btn-dark btn-block mb-6" 
        href="/alunos/edit/{{id}}">Edit</a>
        <form method="post" action="/alunos/{{id}}?_method=DELETE">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn btn-danger btn-block" value="Delete">
        </form>        
    </div>
{{else}}
