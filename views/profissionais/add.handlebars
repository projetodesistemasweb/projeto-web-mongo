<div class="card card-body">
    <h3>{{title}}</h3>
    <form action="/profissionais" method="post">
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" name="nome" class="form-control"required>
        </div>
        <div class="form-group">
            <label for="datanascimento">Data de Nascimento</label>
            <input type="text" name="datanascimento" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="foto">Foto</label>
            <input type="text" name="foto" class="form-control"required>
        </div>
        <div class="form-group">
            <label for="formacaoacad">Formação Academica</label>
            <input type="text" name="formacaoacad" class="form-control"required>
        </div>
        <div class="form-group">
            <label for="endereco">Endereço</label>
            <input type="text" name="endereco" class="form-control"required>
        </div>
        <div class="form-group">
            <label for="telefone">Telefone</label>
            <input type="text" name="telefone" class="form-control"required>
